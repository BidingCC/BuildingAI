{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "@uni-helper/vite-plugin-uni-pages",
            "@dcloudio/types",
            "z-paging/types",
            "@mini-types/alipay",
            "miniprogram-api-typings",
            "@uni-helper/uni-types",
            "@uni-helper/uni-ui-types",
        ],
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "@buildingai/vite-plugins/types"
    ],
    "exclude": [
        "src/uni_modules/**/*"
    ],
    "vueCompilerOptions": {
        "plugins": [
            "@uni-helper/uni-types/volar-plugin"
        ]
    }
}