{
	"name": "@buildingai/vite-plugins",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**/*"
	],
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./middleware": {
			"require": "./dist/middleware-runtime.js",
			"import": "./dist/middleware-runtime.js",
			"types": "./dist/middleware-runtime.d.ts"
		}
	},
	"scripts": {
		"clean": "rimraf dist .turbo tsconfig.tsbuildinfo",
		"check-types": "tsc --noEmit",
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"format": "biome format --write .",
		"format:check": "biome ci .",
		"lint": "eslint . --quiet",
		"lint:fix": "eslint . --fix",
		"watch": "tsc -p tsconfig.build.json --watch"
	},
	"dependencies": {
		"@buildingai/logger": "workspace:*",
		"chokidar": "catalog:",
		"fast-glob": "catalog:",
		"fs-extra": "catalog:"
	},
	"devDependencies": {
		"@buildingai/typescript-config": "workspace:*",
		"@buildingai/eslint-config": "workspace:*",
		"@dcloudio/types": "^3.4.16",
		"@types/fs-extra": "catalog:",
        "vite": "6.3.4"
	}
}


